<!DOCTYPE html>
<html lang="en">

   <!--Head-->
   <%- include ("./partials/head")  %> 

   <body>

   <!--Header-->    
   <%- include ("./partials/header")  %>

   
    <main>
        <section class="main-section">

            <article class="section-img">
                <img src="/img/pantalla.png" alt="imagen principal del index">
            </article>

        </section>

        <section class="main-section2">
            
            <h3>¿Por que comprar con nosotros?</h3>

            <article>

                <div>
                    <i class="fa-solid fa-truck-fast"></i>
                    <p>Servicio de entrega</p>                    
                </div>

                <div>
                    <i class="fa-solid fa-medal"></i>
                    <p>Garantía</p>
                </div>

                <div>
                    <i class="fa-solid fa-headset"></i>
                    <p>Soporte en línea</p>                   
                </div>
            </article>

        </section>

        <section class="main-section3">
            
            <% productos.forEach(element => { %>
            <article>
                <a href="/productDetail/<%= element.id %> ">
                    <img src="/img/<%=element.img%>.jpg " alt="">
                    <h3><%= element.nombre %> </h3>
                </a>
                <p><%= element.precio %> </p>
            </article>
            <% }) %> 

        </section>


    </main>
    
    <!--Footer-->
    <%- include ("./partials/footer")  %> 
    
</body>
</html>