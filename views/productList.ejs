<!DOCTYPE html>
<html lang="en">

    <!--Head-->
    <%- include ("./partials/head")  %> 

    <body>
        
    <!--Header-->    
    <%- include ("./partials/header")  %>


    <main>
        <section class="products-main">
           
            <% productos.forEach(element => { %>
             
                <article class="product">
                    
                    <a href="/productDetail/<%= element.id %> ">
                        <img src="/img/<%= element.img  %>.jpg" alt="">
                    </a>
                    <h3><%= element.nombre  %> </h3>
                    <p><%= element.precio  %> </p>

                    <div class="product__basics">
                        <button class="buttom-carrito" type="submit">AGREGAR AL CARRITO</button>
                        <button class="buttom-carrito" type="submit">COMPRAR</button>   
                    </div>
                
                </article>

            <% }) %>
            
         
        </section>
    </main>

    <!--Footer-->
    <%- include ("./partials/footer")  %> 
    
</body>
</html>