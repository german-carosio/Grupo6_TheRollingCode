<!DOCTYPE html>
<html lang="en">

   <!--Head-->
   <%- include ("./partials/head")  %> 

   <body>

   <!--Header-->    
   <%- include ("./partials/header")  %>

   
    <main>
        <section>

            
        </section>

        
        <section class="productList">

            <h2>Administrador: Lista de productos</h2>

            <a href="/products/productCreate">Crear nuevo producto</a>

            <% productos.forEach(element => { %>
             
                <article class="productList__product">
                    
                    
                        <img src="/img/<%= element.img  %>" alt="">
                     
                    
                        <h3><%= element.marca  %> </h3>
                        <p><%= element.modelo  %></p>
                    
                   
                    <p><%= element.precio  %> </p>

                    <div>
                        <form action="/products/administrador/<%= element.id %>?_method=DELETE " method="post">
                        <i class="fa-solid fa-trash-can"></i>
                        </form>
                        <br>
                        
                        <a href="/products/productEdit/<%= element.id %> ">
                            <i class="fa-solid fa-pen"></i>
                        </a>
                    </div>
                
                </article>

            <% }) %>
            
         
        </section>
    </main>
    
    <!--Footer-->
    <%- include ("./partials/footer")  %> 
    
</body>
</html>